<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Assignment2.ConvertCurrencyPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label x:Name="result" FontSize="Medium" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                <Label.Text>
                    <MultiBinding StringFormat="{}{0} {1}">
                        <Binding Path="price" />
                        <Binding Path="error" />
                    </MultiBinding>
                </Label.Text>
            </Label>
            <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <Entry x:Name="fromCurrency" Placeholder="From currency"/>
            <Label Text="-" FontSize="Large"/>
            <Entry x:Name="toCurrency" Placeholder="To currency"/>
            </StackLayout>
            
            <Button Text="CONVERT" Clicked="convertClicked"/>
           
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>